<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TavukActivity">

    <Button
        android:id="@+id/btntavSis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/barbecue" />

    <Button
        android:id="@+id/btnBut"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btntavSis"
        android:layout_marginEnd="129dp"
        android:background="@drawable/chick" />


    <TextView
        android:id="@+id/textIsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="232dp"
        android:text="Tavuk Şiş" />

    <TextView
        android:id="@+id/textBez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnBut"
        android:layout_alignTop="@+id/textIsp"
        android:text="Fırında Tavuk But" />



</RelativeLayout>